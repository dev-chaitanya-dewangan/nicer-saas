# Local Development Environment Variables
# Copy this file to .env.local and fill in your values

# Notion Integration (Required for local development)
# Get your token from: https://www.notion.so/my-integrations
NOTION_ACCESS_TOKEN=your_notion_integration_token_here
NOTION_PAGE_ID=your_parent_page_id_here

# Notion OAuth Configuration (Required for user authentication)
# Create a Notion integration at: https://www.notion.so/my-integrations
NOTION_CLIENT_ID=your_notion_client_id_here
NOTION_CLIENT_SECRET=your_notion_client_secret_here

# Database
DATABASE_URL=file:./dev.db

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Local development settings
NODE_ENV=development
PORT=5000